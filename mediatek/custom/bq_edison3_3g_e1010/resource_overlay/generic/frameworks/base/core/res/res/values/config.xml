<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds.  Do not translate. -->
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
   
    <!-- Minimum screen brightness setting allowed by the power manager.
         The user is forbidden from setting the brightness below this level. -->
    <integer name="config_screenBrightnessSettingMinimum">10</integer>
    
    <!-- Maximum screen brightness allowed by the power manager.
         The user is forbidden from setting the brightness above this level. -->
    <integer name="config_screenBrightnessSettingMaximum">255</integer>
    <integer-array name="config_longPressVibePattern">
        <item>0</item>
        <item>40</item>
        <item>60</item>
        <item>80</item>
    </integer-array>
    <!-- Vibrator pattern for feedback about touching a virtual key -->
    <integer-array name="config_virtualKeyVibePattern">
        <item>0</item>
        <item>40</item>
        <item>60</item>
        <item>80</item>
    </integer-array>
    <!-- Vibrator pattern for a very short but reliable vibration for soft keyboard tap -->
    <integer-array name="config_keyboardTapVibePattern">
        <item>100</item>
    </integer-array>
    <!-- Vibrator pattern for feedback about hitting a scroll barrier -->
    <integer-array name="config_scrollBarrierVibePattern">
        <item>0</item>
        <item>30</item>
        <item>50</item>
        <item>50</item>
    </integer-array>
    <integer name="config_safe_media_volume_index">10</integer>

    <!-- Led shine when battery level dips to this value -->
    <integer name="config_ledLowBatteryWarningLevel">6</integer>
    <!--[A]modify default value for led color when battery is medium charged from orange to red.-->
    <integer name="config_notificationsBatteryMediumARGB">0xFFFF0000</integer>
    <!--END-->
    <!-- Used to decide if there should be a disable option.xmtjf.20141025.Bug-Id<0031535> -->
    <bool name="config_intrusiveNotificationLed">true</bool>
</resources>
